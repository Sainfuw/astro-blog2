---
import { Image } from "astro:assets";

export interface Props {
  post: any;
}

const { post } = Astro.props;
---

<article
  class="flex gap-4 border-2 border-black rounded-md bg-black overflow-hidden"
>
  <div class="flex flex-col gap-4 py-5 px-10 text-white">
    <h2 class="text-3xl font-bold">{post.frontmatter.title}</h2>
    <p class="text-balance">{post.frontmatter.description}</p>
    <p>{post.frontmatter.author}</p>
    <p>{post.frontmatter.date}</p>
    <a
      href={post.url}
      class="px-4 py-2 w-[105px] bg-blue-500 text-white rounded-md">Read post</a
    >
  </div>
  <Image src={post.frontmatter.image} alt="image" width={400} height={200} />
</article>
